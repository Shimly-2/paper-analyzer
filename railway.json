{
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "providers": ["node", "python"],
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "python311Packages.pip"],
          "commands": ["pip install -r requirements.txt"],
          "nodeCommands": ["npm install"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node --version && python3 --version && node api/server.js"
  }
}
